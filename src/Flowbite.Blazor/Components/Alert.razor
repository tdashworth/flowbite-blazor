<div class="@Classes" role="alert">
	@if (ShowIcon)
	{
		<svg aria-hidden="true" class="inline flex-shrink-0 mr-3 w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
		xmlns="http://www.w3.org/2000/svg">
			<path fill-rule="evenodd"
			d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
			clip-rule="evenodd"></path>
		</svg>
		<span class="sr-only">Info</span>
	}
	<div>
		@ChildContent
	</div>
</div>

@code {
	[Parameter]
	public bool ShowIcon { get; set; }

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public bool Rounded { get; set; }

	private string Classes => "flex p-4 mb-4 text-sm " + ColorClasses[FlowbiteColors.Blue] + (Rounded ? "rounded-lg" : "");

	private static Dictionary<FlowbiteColors, string> ColorClasses = new()
	{
		{ FlowbiteColors.Blue, "text-blue-700 bg-blue-100 dark:bg-blue-200 dark:text-blue-800 " }
	};
}